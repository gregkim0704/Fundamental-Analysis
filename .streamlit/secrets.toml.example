# Streamlit Cloud Secrets 설정 예시
# 이 파일을 참고하여 Streamlit Cloud 대시보드에서 secrets를 설정하세요.
# https://share.streamlit.io 에서 앱 설정 > Secrets 메뉴

# =============================================================================
# API Keys (필수)
# =============================================================================

# Anthropic Claude API Key
ANTHROPIC_API_KEY = "sk-ant-api03-xxxxxxxxxxxx"

# =============================================================================
# API Keys (선택)
# =============================================================================

# OpenDART API Key (한국 주식 공시정보)
# https://opendart.fss.or.kr 에서 발급
OPENDART_API_KEY = "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# FRED API Key (미국 거시경제 데이터)
# https://fred.stlouisfed.org/docs/api/api_key.html 에서 발급
FRED_API_KEY = "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# Database (선택 - 향후 확장용)
# =============================================================================

# PostgreSQL Database URL
# DATABASE_URL = "postgresql://user:password@host:5432/dbname"

# Redis URL (캐싱용)
# REDIS_URL = "redis://user:password@host:6379"

# =============================================================================
# 앱 설정
# =============================================================================

[app]
# 디버그 모드 (배포 시 false로 설정)
debug = false

# 기본 언어
default_language = "ko"

# AI 토론 라운드 수
debate_rounds = 3

# 악마의 변호인 포함 여부
include_devils_advocate = true
